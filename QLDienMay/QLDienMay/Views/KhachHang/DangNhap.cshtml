@model QLDienMay.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng nhập</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Assets/images/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/font-awesome/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/css/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/css/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/css/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Assets/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/login.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Assets/images/img-01.png" alt="IMG">
                </div>

                <div class="login100-form validate-form">
                    <span class="login100-form-title">
                        <h1 style="font-weight: bold">Đăng nhập</h1>
                    </span>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="wrap-input100 validate-input" data-validate="Vui lòng nhập tài khoản">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "input100", @placeholder = "Nhập tài khoản" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="wrap-input100 validate-input" data-validate="Vui lòng nhập mật khẩu">
                                @Html.PasswordFor(model => model.PassWord, new { @class = "input100", @placeholder = "Nhập mật khẩu" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        if (ViewData["LoiDK"] != null)
                        {
                            <div>
                                <p style="color:red;font:bold;font-size:15px;">*** @ViewData["LoiDN"]</p>
                            </div>
                        }
                        @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                <br />
                                <input type="submit" name="submit" class="login100-form-btn" style="width:100%" value="ĐĂNG NHẬP" />
                            </div>
                        </div>
                    }

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Quên
                        </span>
                        <a class="txt2" href="#">
                            Tài khoản / Mật khẩu?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="#">
                            Tạo tài khoản mới
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            <i>@Html.ActionLink("Đăng ký", "DangKy", "KhachHang")</i>

                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Assets/js/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/js/bootstrap/popper.js"></script>
    <script src="~/Assets/js/bootstrap/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/js/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/js/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Assets/js/login_main.js"></script>

</body>
</html>
